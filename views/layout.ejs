<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PC Master</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary: #6366f1;
            --secondary: #4f46e5;
            --dark: #1e1b4b;
            --light: #f8fafc;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background-color: var(--light);
            color: var(--dark);
        }

        .navbar {
            background-color: white;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
        }

        .btn-primary {
            background-color: var(--primary);
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--secondary);
            transform: translateY(-2px);
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg mb-5">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">PC Master</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Productos</a>
                    </li>
                    <% if (user && user.level==='admin' ) { %>
                        <li class="nav-item">
                            <a class="nav-link text-primary fw-bold" href="/admin/dashboard">Panel Admin</a>
                        </li>
                        <% } %>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <% if (!user) { %>
                    <a href="/login" class="btn btn-outline-primary me-2">Login</a>
                    <a href="/register" class="btn btn-primary">Registro</a>
                    <% } else { %>
                        <span class="navbar-text me-3">Hola, <strong>
                                <%= user.name %>
                            </strong></span>
                        <% if (user.level !=='admin' ) { %>
                            <a href="/cart" class="btn btn-outline-primary btn-sm me-3 position-relative">
                                <i class="bi bi-cart3"></i>
                            </a>
                            <% } %>
                                <a href="/logout" class="btn btn-outline-danger btn-sm">Salir</a>
                                <% } %>
            </div>
        </div>
    </nav>
    <div class="container">
        <%- body %>
    </div>

    <!-- Contenedor de Toasts Global -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;">
        <div id="liveToast" class="toast border-0 rounded-4 shadow-lg" role="alert" aria-live="assertive"
            aria-atomic="true">
            <div class="d-flex bg-white rounded-4 overflow-hidden border">
                <div id="toastIconContainer" class="p-3 d-flex align-items-center">
                    <i id="toastIcon" class="bi fs-4"></i>
                </div>
                <div class="toast-body p-3 flex-grow-1">
                    <strong id="toastTitle" class="d-block mb-1"></strong>
                    <span id="toastMessage" class="text-muted small"></span>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.showToast = (title, message, type = 'success') => {
            const toastEl = document.getElementById('liveToast');
            const icon = document.getElementById('toastIcon');
            const iconContainer = document.getElementById('toastIconContainer');
            const titleEl = document.getElementById('toastTitle');
            const msgEl = document.getElementById('toastMessage');

            if (type === 'success') {
                icon.className = 'bi bi-check-circle-fill text-success';
                iconContainer.style.backgroundColor = '#f0fff4';
                titleEl.className = 'text-success';
            } else {
                icon.className = 'bi bi-exclamation-triangle-fill text-danger';
                iconContainer.style.backgroundColor = '#fff5f5';
                titleEl.className = 'text-danger';
            }

            titleEl.innerText = title;
            msgEl.innerText = message;

            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        };
    </script>
</body>

</html>